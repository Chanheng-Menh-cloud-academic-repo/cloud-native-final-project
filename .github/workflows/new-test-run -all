name: CI/CD Pipeline for Student Management System

on:
  push:
    branches:
      - main

jobs:
  build-and-push:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        service: [api-gateway, add-service, delete-service, update-service, search-service]

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '16'

      - name: Install dependencies
        run: npm install

      - name: Run tests
        run: npm test  # Runs the 'test' script defined in package.json

  test-services:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        service: [add-service, delete-service, update-service, search-service, api-gateway]
    
    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '16'

      - name: Install dependencies
        run: npm install

      - name: Run specific service tests
        run: npm run test:${{ matrix.service }}  # Run specific tests for each service
